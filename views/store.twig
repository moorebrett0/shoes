<html>
<head>
    <title>Shoes</title>
</head>
<body>
    <h1>{{ stores.getName }}</h1>

    {% if brands is not empty %}
        <p>Here are all your Brands:</p>
        <ul>
            {% for brand in brands %}

                <li>{{ brand.getName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a brand to this store:</h4>

    <form action='/add_brands' method='post'>
        <input id="store_id" name="store_id" type="hidden" value="{{ stores.getId }}">
        <label for='task_id'>Select a Brand</label>
        <select id="task_id" name="task_id" type="text">
            {% for brand in all_brands %}
                <option value="{{ brand.getId }}"> {{ brand.getName }}</option>
            {% endfor %}
        </select>
        <button type="submit">Add brand</button>
    </form>

    <p><a href="/stores/{{ stores.getId }}/edit">Edit this store</a></p>

    <p><a href='/'>Home</a></p>

</body>
</html>
